body
	padding: 0
	margin: 0
#container
	position: fixed
	width: 100%
	height: 100%

#arrows, #controls
	width: 50%
	float: left
	position: relative

sum_height = 100

#up, #left, #right, #down
	height: (sum_height / 3)%
	text-align: center

#up, #down
	background: #FFFF86

#left
	background: #B0F7F1

#right
	background: #FA9B52

#up, #down
	width: 100%

#left, #right
	float: left
	width: 50%

#a, #b
	border-bottom: 1px solid black

#a, #aa
	border-right: 1px solid black
	margin-left: -1px

#controls>div
	background: #77D7E1
	height: (sum_height / 2)%
	width: 50%
	position: relative
	float: left

#menu
	position: fixed
	z-index: 10
	height: 100% 
	left: -1000%
	width: 50%
	transition: left 0.5s
	font-size: 25px

#menu>div
	background: #0000B3
	color: white
	height: (sum_height / 3)%
	position: relative
	width: 100%
	border-bottom: 1px solid black
	border-right: 1px solid black

#controls>div, #arrows>div, #menu>div
	display: table

	div 
		display: table-cell
		text-align: center
		vertical-align: middle

body
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

.mousedown
	opacity: 0.6

#menu.shown
	left: 0%